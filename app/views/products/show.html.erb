<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= number_to_currency(@product.price) %></dd>
        </dl>
      </div>
    </div>

    <div class="reviews-container">

      <h4>Product Reviews</h4>

      <div class="row reviews-wrapper">
        <div class="col-sm-8">
          <% @product.reviews.each do |review| %>
            
            <div class="row individual-review">
              <div class="col-sm-8">
                
                <div class="row">
                  <div class="col-sm-4 reviewer-name">
                    <strong><%= review.user.first_name %> </strong> 
                  </div>
                  
                  <div class="col-sm-5 stars">
                    <% review.rating.times do %>
                      â˜…
                    <% end %>
                  </div>

                  <% if current_user && (review.user_id == current_user.id) %>
                    <div class="col-sm-2 destroy-button">
                      <%= link_to 'Delete', product_review_url(@product, review), method: :delete, data: { confirm: 'Are you sure you want to delete your review?' } %>
                    </div>
                  <% end %>
                </div>
                <div class="row">
                  <div class="col-sm-12 review-description">
                    <%= review.description %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      
      <% if current_user %>
        <div class="row">
          <div class="col-sm-8 review-form-wrapper">

            <h4>Leave a review</h4>

            <%= form_for [@product, @review] do |f| %>
              <div class="col-sm-2 rating-dropdown">
                <h5>Rating</h5> 
                <%= f.select :rating, [5, 4, 3, 2, 1] %>
              </div>

              <div class="col-sm-10 rating-description">
                <h5>Description</h5>
                <div class="row">
                  <div class="col-sm-8"><%= f.text_area :description, placeholder: "add your review here..." %></div>
                  <div class="col-sm-4">
                    <div><%= f.submit "Submit Review", :class => 'btn btn-primary' %></div>
                  </div>
                </div>
              </div>

            <% end %>
        </div>
      <% end %>

    </div>
  </article>

</section>

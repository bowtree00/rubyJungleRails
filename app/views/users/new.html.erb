<h1>Signup!</h1>

<%= form_for :user, url: '/users' do |f| %>
  

  <div class="col-xs-7 col-sm-10 col-md-8 signup-container">
    
    <div class="col-xs-12 col-sm-6 col-md-6">
      <div class="row form-row">
        <div class="col-sm-4 col-md-4">First Name:</div>
        <div class="col-sm-8 col-md-8"><%= f.text_field :first_name %></div>
      </div>

      <div class="row form-row">
        <div class="col-sm-4 col-md-4">Last Name:</div>
        <div class="col-sm-8 col-md-8"><%= f.text_field :last_name %></div>
      </div>

      <div class="row form-row">
        <div class="col-sm-4 col-md-4">Email:</div>
        <div class="col-sm-8 col-md-8"><%= f.text_field :email %></div>
      </div>
    </div>

    <div class="col-xs-12 col-sm-6 col-md-6">
      <div class="row form-row">
        <div class="col-sm-4 col-md-4">Password:</div>
        <div class="col-sm-8 col-md-8"><%= f.password_field :password %></div>
      </div>

      <div class="row form-row">
        <div class="col-sm-4 col-md-4">Password Confirmation:</div>
        <div class="col-sm-8 col-md-8"><%= f.password_field :password_confirmation %></div>
      </div>
    </div>
    
    <div class="row">
      <div class="col-sm-4 col-md-4"><%= f.submit "Submit", :class => "signup-submit btn btn-primary" %></div>
    </div> 
  </div>

  


<% end %>